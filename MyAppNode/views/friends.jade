// Jade file to specify output of an actors list
// Inherits from layout
extend layout
block content
  p
    form(method='get', action='/search_friends', name='myForm')
      input(name='searchFriend', value='')
      input(type='submit', value='Search')
      

  p
    | #{title}:      
    .img_grid
    - for (var inx = 0; inx < results.length; inx++)
      .floated_img
        img(src='/uploads/'+results[inx].PROFILEPIC, width='150px', height='150px',hspace=10)
        p  
          a(href='/user/?login=#{results[inx].LOGIN}') #{results[inx].GIVENNAME+" "+results[inx].SURNAME} 
          a(href='/add_delete_friend?login=#{results[inx].LOGIN}&isdelete=#{results[inx].ISDELETE}') #{results[inx].ISDELETE}
        


  